# .htaccess para Hostinger - Sistema recepcaotb
# Renomeie para .htaccess quando fizer upload

# Configurações PHP
php_value upload_max_filesize 50M
php_value post_max_size 50M
php_value memory_limit 256M
php_value max_execution_time 300
php_value max_input_vars 3000

# Timezone
php_value date.timezone "America/Sao_Paulo"

# Segurança
# Ocultar informações do servidor
ServerTokens Prod
Header unset Server
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Proteger arquivos sensíveis
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Habilitar compressão
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache para arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Roteamento para APIs
RewriteEngine On

# Redirecionar APIs para o diretório php
RewriteRule ^api/auth/?(.*)$ php/api/auth.php [QSA,L]
RewriteRule ^api/pessoas/?(.*)$ php/api/pessoas.php [QSA,L]
RewriteRule ^api/frequencias/?(.*)$ php/api/frequencias.php [QSA,L]
RewriteRule ^api/usuarios/?(.*)$ php/api/usuarios.php [QSA,L]
RewriteRule ^api/voluntarios/?(.*)$ php/api/voluntarios.php [QSA,L]
RewriteRule ^api/frequencia_voluntarios/?(.*)$ php/api/frequencia_voluntarios.php [QSA,L]
RewriteRule ^api/duplicatas/?(.*)$ php/api/duplicatas.php [QSA,L]
RewriteRule ^api/backups/?(.*)$ php/api/backups.php [QSA,L]

# Página padrão
DirectoryIndex index.html
