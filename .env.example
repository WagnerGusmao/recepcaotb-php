# ========================================
# CONFIGURAÇÕES DO AMBIENTE - TERRA DO BUGIO
# ========================================
# Copie este arquivo para .env e configure com seus valores

# Ambiente da aplicação (development ou production)
APP_ENV=development

# URL de produção (deixe vazio em desenvolvimento)
PRODUCTION_URL=

# Banco de Dados
DB_HOST=localhost
DB_NAME=recepcaotb_local
DB_USER=root
DB_PASS=

# JWT Secret (gere uma chave aleatória forte para produção)
JWT_SECRET=sua_chave_secreta_aqui_gere_uma_aleatoria

# Sessão
SESSION_LIFETIME=86400

# Rate Limiting
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_DECAY_MINUTES=15

# Email (configure para produção)
MAIL_HOST=
MAIL_PORT=
MAIL_USER=
MAIL_PASS=
MAIL_FROM=noreply@terradobugio.com
MAIL_FROM_NAME="Terra do Bugio"

# Logs
LOG_LEVEL=debug
LOG_FILE=php/logs/app.log

# Backup
BACKUP_PATH=php/backups/
BACKUP_RETENTION_DAYS=30
